{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "baseUrl": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "Node10",

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}